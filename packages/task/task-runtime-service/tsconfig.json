{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2017", "DOM"],
    "module": "ES6",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/*.d.ts"]
  },
  "include": ["src", "src/*.d.ts"]
}
