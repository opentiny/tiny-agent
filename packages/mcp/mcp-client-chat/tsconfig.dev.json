{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2020", "DOM"],
    "module": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "src/*.d.ts"]
}
